<section class="page-section">
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </div>
    
    {% if page.content != blank %}
      <div class="page-content rte">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .page-section {
    padding: 8rem 0 6rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 500;
    color: #f2efe9;
    margin: 0;
  }

  .page-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-content h2 {
    font-family: 'Playfair Display', serif;
    font-size: 1.75rem;
    color: #f2efe9;
    margin: 3rem 0 1rem;
  }

  .page-content h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: #f2efe9;
    margin: 2rem 0 1rem;
  }

  .page-content p {
    color: rgba(242, 239, 233, 0.8);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .page-content ul,
  .page-content ol {
    color: rgba(242, 239, 233, 0.8);
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .page-content li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .page-content a {
    color: #d4af37;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .page-content a:hover {
    opacity: 0.8;
  }

  .page-content blockquote {
    border-left: 3px solid #d4af37;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(242, 239, 233, 0.9);
  }

  @media (max-width: 768px) {
    .page-section {
      padding: 6rem 0 4rem;
    }
  }
</style>
